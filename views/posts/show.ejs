<!DOCTYPE html>
<html>
<head>
<% include ../partials/head %>
</head>
<body>
	<header>
		<% include ../partials/header %>
	</header>
	<div class="posts">
	<% include partials/top %>
	<!-- main start -->

	<!-- views/posts/index.ejs -->
	<div class="show">
		<h3><%= data.title %></h3>
		<div class="time">
			Created at<br>
			<%= data.createdAt.toLocaleDateString() %><br>
			<%= data.createdAt.toLocaleTimeString() %>
		</div>
		<% if(data.updatedAt) { %>
		<div class="time">
			Updated at<br>
			<%= data.updatedAt.toLocaleDateString() %><bt>
			<%= data.updatedAt.toLocaleTimeString() %>
		</div>
		<% } %>
		<p class="body"><%= data.body %></p>
		<div class="tools">
			<a href="/posts/<%=data._id%>/edit">Edit</a>
			<form class="btn_del" action="/posts/<%=data._id%>?_method=delete" method="post">
				<button type="submit">delete</button>
			</form>
		</div>
		<a href="/posts">back</a>
	</div>

	<!-- main end -->
	</div> <!-- posts end -->
	<footer>
		<% include ../partials/footer %>
	</footer>
</body>
</html>